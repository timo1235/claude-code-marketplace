{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "step-review.schema.json",
  "title": "Step Review",
  "description": "Schema for per-step Codex review output (.task/step-N-review.json)",
  "type": "object",
  "required": ["step_id", "status", "summary", "step_adherence", "findings", "verdict"],
  "additionalProperties": false,
  "properties": {
    "step_id": {
      "type": "integer",
      "description": "The step number being reviewed"
    },
    "status": {
      "type": "string",
      "enum": ["approved", "needs_changes", "rejected"],
      "description": "Step review verdict"
    },
    "summary": {
      "type": "string",
      "description": "One-paragraph assessment of this step"
    },
    "step_adherence": {
      "type": "object",
      "required": ["implemented", "correct", "notes"],
      "additionalProperties": false,
      "properties": {
        "implemented": {
          "type": "boolean",
          "description": "Was everything in this step implemented?"
        },
        "correct": {
          "type": "boolean",
          "description": "Is the implementation correct?"
        },
        "notes": {
          "type": "string",
          "description": "Additional adherence notes (empty string if none)"
        }
      }
    },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["severity", "category", "file", "line", "description", "recommendation"],
        "additionalProperties": false,
        "properties": {
          "severity": {
            "type": "string",
            "enum": ["critical", "major", "minor", "suggestion"]
          },
          "category": {
            "type": "string",
            "enum": [
              "bug", "security", "error-handling", "resource-management",
              "performance", "code-quality", "concurrency", "testing",
              "dead-code", "over-engineering", "logging", "api-design"
            ]
          },
          "file": {
            "type": ["string", "null"],
            "description": "Relative file path (null if not applicable)"
          },
          "line": {
            "type": ["integer", "null"],
            "description": "Line number (null if not applicable)"
          },
          "description": {
            "type": "string"
          },
          "recommendation": {
            "type": "string"
          }
        }
      }
    },
    "verdict": {
      "type": "string",
      "description": "What must change before approval (empty string if approved)"
    }
  }
}
