{
  "description": "Pipeline hooks: phase guidance (advisory) + review gate (enforcement on SubagentStop)",
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/phase-guidance.js"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/review-gate.js"
          }
        ]
      }
    ]
  }
}
